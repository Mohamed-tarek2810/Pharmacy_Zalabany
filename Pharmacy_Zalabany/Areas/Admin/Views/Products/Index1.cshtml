@model CategoriesAndProductsvm


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>إضافة منتج جديد</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        .form-label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="fw-bold mb-4">إضافة منتج جديد</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                الرجاء التأكد من إدخال جميع البيانات بشكل صحيح.
            </div>
        }

        <form asp-action="Index1" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="Name" class="form-label">اسم المنتج</label>
                <input type="text" name="Name" id="Name" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="Description" class="form-label">الوصف</label>
                <textarea name="Description" id="Description" class="form-control" rows="3" required></textarea>
            </div>

            <div class="mb-3">
                <label for="Price" class="form-label">السعر</label>
                <input type="number" name="Price" id="Price" class="form-control" step="0.01" required />
            </div>

            <div class="mb-3">
                <label for="Discount" class="form-label">الخصم (%)</label>
                <input type="number" name="Discount" id="Discount" class="form-control" min="0" max="100" value="0" />
            </div>

            <div class="mb-3">
                <label for="Rate" class="form-label">التقييم (من 1 إلى 5)</label>
                <select name="Rate" id="Rate" class="form-select" required>
                    <option value="">اختر التقييم</option>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <option value="@i">@i </option>
                    }
                </select>
            </div>



            <div class="mb-3">
                <label for="Quantity" class="form-label">الكمية المتاحة</label>
                <input type="number" name="Quantity" id="Quantity" class="form-control" min="0" max="1000" value="0" required />
            </div>


            <div class="mb-3">
                <label for="MainImg" class="form-label">رابط صورة المنتج</label>
                <input type="text" name="MainImg" id="MainImg" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="Status" class="form-label">الحالة</label>
                <select name="Status" id="Status" class="form-select">
                    <option value="true">متاح</option>
                    <option value="false">غير متاح</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="CategoryId" class="form-label">الفئة</label>
                <select name="CategoryId" id="CategoryId" class="form-select">
                    @foreach (var item in Model.Categorys)
                    {
                        <option value="@item.CategoryId">@item.Name</option>
                    }
                </select>
            </div>

            <div class="d-flex justify-content-start">
                <button type="submit" class="btn btn-primary">حفظ</button>
                <a href="/Admin/Products/Index" class="btn btn-secondary mx-2">إلغاء</a>
            </div>
        </form>
    </div>
</body>
</html>
