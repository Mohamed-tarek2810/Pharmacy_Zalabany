@model CategoriesAndProductsvm

<div class="container mt-5">
    <h2 class="mb-4 mt-4 fs-3">تعديل بيانات المنتج</h2>

    <form action="/Admin/Products/Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" name="ProductId" value="@Model.Product.ProductId" />

        <div class="mb-3">
            <label for="Name" class="form-label">اسم المنتج</label>
            <input type="text" name="Name" id="Name" class="form-control" value="@Model.Product.Name" required />
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">الوصف</label>
            <textarea name="Description" id="Description" class="form-control" rows="3" required>@Model.Product.Description</textarea>
        </div>

        <div class="mb-3">
            <label for="Price" class="form-label">السعر</label>
            <input type="number" name="Price" id="Price" class="form-control" step="0.01" value="@Model.Product.Price" required />
        </div>

        <div class="mb-3">
            <label for="Discount" class="form-label">الخصم (%)</label>
            <input type="number" name="Discount" id="Discount" class="form-control" value="@Model.Product.Discount" min="0" max="100" />
        </div>

        <div class="mb-3">
            <label for="Rate" class="form-label">التقييم (من 1 إلى 5)</label>
            <select name="Rate" id="Rate" class="form-select" required>
                <option value="">اختر التقييم</option>
                @for (int i = 1; i <= 5; i++)
                {
                    <option value="@i">@i </option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="Quantity" class="form-label">الكمية المتاحة</label>
            <input type="number" name="Quantity" id="Quantity" class="form-control" min="0" max="1000" value="@Model.Product!.Quantity" required />
        </div>

        <div class="mb-3">
            <label for="MainImg" class="form-label">رابط صورة المنتج</label>
            <input type="text" name="MainImg" id="MainImg" class="form-control" value="@Model.Product.MainImg" required />
        </div>

        <div class="mb-3">
            <label for="Status" class="form-label">الحالة</label>
            <select name="Status" id="Status" class="form-select" required>
                <option value="">اختر الحاله</option>
                <option value="true">متاح</option>
                <option value="false">غير متاح</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="CategoryId" class="form-label">الفئة</label>
            <select class="form-select" name="CategoryId" id="CategoryId" required>
                <option value="">اختر الفئة</option>
                @foreach (var item in Model.Categorys)
                {
                    <option value="@item?.CategoryId">@item?.Name</option>
                }
            </select>
        </div>

        <div class="d-flex justify-content-start">
            <button type="submit" class="btn btn-primary">حفظ</button>
            <a href="/Admin/Products/Index" class="btn btn-secondary mx-2">إلغاء</a>
        </div>
    </form>

</div>

