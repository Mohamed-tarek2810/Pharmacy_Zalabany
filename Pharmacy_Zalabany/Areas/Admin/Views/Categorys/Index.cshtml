@model List<Categorys>

<!DOCTYPE html>

<head>
    <meta charset="utf-8" />
    <title>قائمة الفئات</title>

    <!-- Bootstrap RTL -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <!-- العنوان وزر الإضافة -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold" style="font-size: 28px;">قائمة الفئات</h2>
            <a href="/Admin/Categorys/Index1" class="btn btn-success">+ إنشاء فئة جديدة</a>
        </div>

        <!-- جدول الفئات -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover text-center align-middle">
                <thead class="table-light">
                    <tr>
                        <th>اسم الفئة</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Name</td>
                                <td>
                                    <a href="/Admin/Categorys/Edit/@category.CategoryId" class="btn btn-sm btn-warning mx-1">تعديل</a>
                                    <a href="/Admin/Categorys/Delete/@category.CategoryId"
                                       class="btn btn-sm btn-danger mx-1"
                                       onclick="return confirm('هل أنت متأكد من حذف هذه الفئة؟');">
                                        حذف
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2">لا توجد فئات متاحة حاليًا.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
