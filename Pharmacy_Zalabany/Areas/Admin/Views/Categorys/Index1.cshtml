@model Pharmacy_Zalabany.Models.Categorys

<!DOCTYPE html>

<head>
    <meta charset="utf-8" />
    <title>إضافة فئة جديدة</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="fw-bold mb-4">إضافة فئة جديدة</h2>

        <form method="post">
            <!-- الاسم -->
            <div class="mb-3">
                <label for="Name" class="form-label">اسم الفئة</label>
                <input type="text" class="form-control" id="Name" name="Name" value="@(Model?.Name ?? "")" placeholder="ادخل اسم الفئة" required />

            </div>

            <!-- الزرار -->
            <div class="d-flex justify-content-start gap-2">
                <button type="submit" class="btn btn-primary">حفظ</button>
                <a href="/Admin/" class="btn btn-secondary">إلغاء</a>
            </div>
        </form>
    </div>
</body>
</html>
