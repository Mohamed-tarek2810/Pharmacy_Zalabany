@model List<Notes>

<!DOCTYPE html>

<head>
    <meta charset="utf-8" />
    <title>إدارة الملاحظات</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <div class="container mt-5">

        <!-- العنوان والزر -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold fs-3">إدارة الملاحظات</h2>
            <a href="/Admin/Notes/Index1" class="btn btn-success">+ إنشاء ملاحظة جديدة</a>
        </div>

        <!-- جدول الملاحظات -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover text-center align-middle">
                <thead class="table-light">
                    <tr>
                        <th>الكاتب</th>
                        <th>النصيحه رقم</th>
                        <th>الملاحظة</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var notes in Model)
                        {
                            <tr>
                                <td>@notes.Auther</td>
                                <td>@notes.number</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(notes.notes) && notes.notes.Length > 50)
                                    {
                                        @($"{notes.notes.Substring(0, 50)}...")
                                    }
                                    else
                                    {
                                        @notes.notes
                                    }
                                </td>
                                <td>
                                    <a href="/Admin/Notes/Edit/@notes.id" class="btn btn-sm btn-warning mx-1">تعديل</a>
                                    <a href="/Admin/Notes/Delete/@notes.id"
                                       class="btn btn-sm btn-danger mx-1"
                                       onclick="return confirm('هل أنت متأكد من حذف هذه الملاحظة؟');">
                                        حذف
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">لا توجد ملاحظات لعرضها.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</body>
</html>
