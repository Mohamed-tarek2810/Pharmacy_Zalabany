                                <div class="star-rating d-flex justify-content-center flex-row-reverse text-warning mb-2" data-product-id="@item.ProductId" data-selected="@item.Rate">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="bi @(i <= item.Rate ? "bi-star-fill" : "bi-star") star"
                                        data-value="@i"
                                        style="cursor: pointer; font-size: 1.2rem;"></i>
                                    }
                                </div>


                                <!-- السعر -->
                                <p class="price mt-2 mb-0">
                                    @if (item.Discount > 0)
                                    {
                                        var discountedPrice = item.Price - ((decimal)item.Price * (decimal)item.Discount / 100m);
                                        <del class="text-muted">@item.Price.ToString("C")</del>

                                        <br />
                                        <span class="text-success fw-bold">@discountedPrice.ToString("C")</span>
                                    }
                                    else
                                    {
                                        <span class="text-dark fw-bold">@item.Price.ToString("C")</span>
                                    }
                                </p>

